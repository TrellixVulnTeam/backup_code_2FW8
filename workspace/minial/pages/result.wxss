/* pages/result.wxss */


.main {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
}
.answer {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border: 4px solid #008000;
  margin-bottom: 20px;
}

.answer h2{
  font-size: 1.5rem;
  padding: .4rem;
  background: #008000;
  color: white;
}

.answer > .money {
  font-weight: bold;
  margin: .4rem;
}

.boxs {
 
  margin: 1rem;
}

.box {
  display: inline-block;
  margin: 0;
  margin-right: .5rem;
  margin-bottom: .5rem;
  color: #999;
  padding: 8px;
  background: #b5e3fd;
  border-radius: 4px;
}