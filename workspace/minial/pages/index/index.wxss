/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.main {
  margin: 0;
  margin-bottom: 48px;
  padding: 0;
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  padding: 10px 20px;
  border-bottom: 1px solid #eee;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-evenly;
  align-items: center;
}

.item > view {
  flex-grow: 1;
  height: 100%;
  align-content: stretch;
}

.center-text {
  padding-left: 12px;
  padding-right: 12px;
  height: 100%;
  display: inline-flex;
  align-items: center;
}

.right {
  text-align: right;
}

.form {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 10px;
  height: 48px;
  display: flex;
  justify-content: space-between;
  background: whitesmoke;
}